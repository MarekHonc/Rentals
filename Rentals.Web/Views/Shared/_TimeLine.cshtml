@using Rentals.Web.Localization

<div class="row">
	<div class="btn-group pull-right" role="group">
		<button type="button" class="btn btn-default">@Localization.TimeLine_Day</button>
		<button type="button" class="btn btn-default">@Localization.TimeLine_Week</button>
		<input type="text" id="date-picker" class="form-control width-100" />
	</div>
</div>
<div class="row" id="time-line">

</div>

<script>
	$(document).ready(
		function () {
			$("#date-picker").datepicker({
				dateFormat: 'dd.mm.yy'
			}); 
		}
	);
</script>
