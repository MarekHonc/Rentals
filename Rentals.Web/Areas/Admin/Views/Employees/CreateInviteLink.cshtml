@model Rentals.Web.Areas.Admin.Models.AdminLinkEditorViewModel
@using Rentals.Web.Localization

@{
	ViewBag.TItle = Admin.Employees_NewInvite;
}

<h2 class="row">@Admin.Employees_NewInvite</h2>

<div class="row">
	<div class="col-md-6">
		@using (Html.BeginForm("CreateInviteLink", "Employees", FormMethod.Post))
		{
			@Html.ValidationSummary(true)
			<div class="form-group">
				@Html.LabelFor(m => m.ForUser)
				@Html.TextBoxFor(m => m.ForUser, new { @class = "form-control" })
				@Html.ValidationMessageFor(m => m.ForUser, string.Empty, new { @class = "text-danger" })
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.ExpiresAt)
				@Html.TextBoxFor(m => m.ExpiresAt, GlobalResources.Cs_TimeFormat, new { @class = "form-control" })
				@Html.ValidationMessageFor(m => m.ExpiresAt, string.Empty, new { @class = "text-danger" })
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.WillBeEmployee)
				@Html.CheckBoxFor(m => m.WillBeEmployee, new { @class = "checkbox" })
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.WillBeAdmin)
				@Html.CheckBoxFor(m => m.WillBeAdmin, new { @class = "checkbox" })
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-primary">@GlobalResources.Save</button>
			</div>
		}
	</div>
</div>

<script type="text/javascript">
	$(document).ready(function () {
		$("#@Html.IdFor(m => m.ExpiresAt)").datepicker({
		dateFormat: "@GlobalResources.Js_TimeFormat"
		});
	});
</script>

